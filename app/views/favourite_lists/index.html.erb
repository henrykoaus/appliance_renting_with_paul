<% if @favourite_list.appliances.any? %>
  <div class="container my-5">
    <div class="row g-4">
      <h3 class="my-4">My Favourites</h3>
      <% @favourite_list.appliances.each do |appliance| %>
        <%= render appliance %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="container my-5" id="no-content">
    <h2>No appliance Yet</h2>
  </div>
<% end %>
