<p style="color: green"><%= notice %></p>

  <%# whole banner %>
  <%# Name of the item with Share and Save buttons %>
  <%# Photos %>

  <%# half column for the info / and another half for booking %>

  <%# info starting from  %>
  <%# address %>
  <%# overview %>
  <%# calendar %>
  <%# reviews %>
  <%# map %>
  <%# host's info %>

  <%# another half for booking, to start from %>
  <%# price %>
  <%# date %>
  <%# total price %>
  <%# reserve btn %>


  <div class="container mt-4">
  <!-- Banner Section -->
  <div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1><%= @appliance.name %></h1>
      <div>
        <button class="btn btn-outline-secondary">Share</button>
        <button class="btn btn-outline-primary">Save</button>
      </div>
    </div>
  </div>

  <!-- Content Section -->
  <div class="row">
    <!-- Left Column: Appliance Info -->
    <div class="col-md-7">
      <div class="mt-3">
        <%= image_tag(@appliance.photo_url, class: "img-fluid rounded", alt: @appliance.name) if @appliance.photo_url %>
      </div>
      <div class="mt-3">
        <h4>Address:</h4>
        <p class="text-muted"><%= @appliance.address %></p>
      </div>
      <div class="mt-4">
        <h4>Overview:</h4>
        <p><%= @appliance.overview %></p>
      </div>
      <div class="mt-4">
        <h4>Availability</h4>
        <p><%= @appliance.availability ? "Available" : "Not Available" %></p>
      </div>

      <%# <h4>Calendar</h4> %>
      <%# <%= render 'calendar' %> <!-- Placeholder for a calendar partial -->

      <!--      Reviews-->
      <div class="mt-5">
        <%= render template: "reviews/index", locals: { reviews: @appliance.reviews, deletable: false } %>
      </div>
      <div data-controller="toggle"
      data-toggle-is-login-value="<%= @user.nil? %>"
      data-toggle-login-url-value="<%= new_user_session_path %>"
      class="my-5">
        <button data-action="click->toggle#fire" class="btn btn-outline-primary">
          Add Review
        </button>
        <div data-toggle-target="togglableElement" class="d-none">
          <div class="my-3">
            <%= render "reviews/form", appliance: @appliance, review: @appliance.reviews.new %>
          </div>
        </div>
      </div>
      <!--Reviews-->
      <!--  <div class="my-5">-->
      <%#= render template: "reviews/index", locals: { reviews: @appliance.reviews } %>
      <!--    <div data-controller="toggle" class="mt-5">-->
      <!--      <button data-action="click->toggle#fire" class="my-3 btn btn-outline-primary">-->
      <!--        Add Review-->
      <!--      </button>-->
      <!--      <div data-toggle-target="togglableElement" class="d-none">-->
          <%#= render "reviews/form", appliance: @appliance, review: @appliance.reviews.new %>
      <!--      </div>-->
      <!--    </div>-->
      <!--  </div>-->

      <!-- Static Map -->
      <div-mt-5>
        <h4>Location</h4>
        <div id="map" style="height: 300px;"></div> <!-- Placeholder for a map -->
      </div-mt-5>

      <!-- Host Info with Avatar -->
      <div class="mt-6">
        <h4>Host Information</h4>
        <p><strong>Hosted by:</strong> <%= @appliance.user.email %></p>
      </div>
    </div>

    <!-- Right Column: Booking Form -->
    <div class="col-md-5">
      <div class="mt-5">
        <div class="card p-3 shadow-sm">
        <%= render "bookings/form", appliance: @appliance, booking: @appliance.bookings.new %>
        </div>
      </div>
    </div>
  </div>
</div>
