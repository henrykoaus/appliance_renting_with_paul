<%= simple_form_for(@appliance) do |f| %>
  <div class="card shadow-sm p-4">
    <h4 class="mb-4">Add a New Appliance</h4>

    <!-- Name Input -->
    <div class="mb-3">
      <%= f.input :name, label: "Appliance Name", input_html: { class: "form-control" } %>
    </div>

    <!-- Address Input -->
    <div class="mb-3">
      <%= f.input :address, label: "Address", input_html: { class: "form-control" } %>
    </div>

    <!-- Availability Date Picker -->
    <div class="mb-3">
      <%= f.input :availability,
                  as: :string,
                  label: "Availability Date",
                  input_html: {
                    class: "form-control",
                    data: { controller: "datepicker" }
                  } %>
    </div>

    <!-- Price Input -->
    <div class="mb-3">
      <%= f.input :price, label: "Price", input_html: { class: "form-control" } %>
    </div>

    <!-- Overview (Description) -->
    <div class="mb-3">
      <%= f.input :overview, label: "Overview", as: :text, input_html: { rows: 4, class: "form-control" } %>
    </div>

    <!-- Submit Button -->
    <%= f.submit "Save Appliance", class: "btn btn-primary w-100" %>
  </div>
<% end %>
