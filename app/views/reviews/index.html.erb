<% if reviews.any? %>
  <div class="container my-5">
    <div class="row g-4">
      <h3 class="my-4">My Reviews</h3>
      <div class="list-group">
        <% reviews.each do |review| %>
          <div class="list-group-item shadow-sm mb-3 p-3 rounded">
            <p>
              <% (1..5).each do |i| %>
                <i class="fa-star <%= i <= review.rating ? 'fas text-warning' : 'far text-secondary' %>"></i>
              <% end %>
              <strong><%= review.rating.round(1).to_i %> / 5</strong>
            </p>
            <p><%= review.comment %></p>
            <% if deletable %>
              <%= link_to "🗑️ Delete", review, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "text-danger text-decoration-none d-inline-flex align-items-center text-center gap-1" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="col-md-6" id="no-content">
    <h5>No Reviews Yet</h5>
  </div>
<% end %>
